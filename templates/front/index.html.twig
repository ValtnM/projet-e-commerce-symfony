<main class="container">
  <div class="row">
    {% for product in products %}
    <div class="col-sm-4">
      <div class="card m-3">
        <img class="card-img-top" src="{{ product.productImages.0.file }}" alt="Card image cap" />
        <div class="card-body">
          <h5 class="card-title">{{ product.name }}</h5>
          <p class="card-text">{{ product.description }}</p>
          <a href="{{ path('app_front_product', {slug: product.slug})}}" class="btn btn-primary">DÃ©tails</a>
        </div>
      </div>
    </div>

    {% endfor %}
  </div>
</main>

{% endblock %}
